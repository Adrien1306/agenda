@{
    ViewData["Title"] = "Supprimer un client";
}
@model Customer

<form asp-action="Delete">
    <div class="mb-3">
        <label asp-for="Lastname" class="form-label"></label>
        <input asp-for="Lastname" class="form-control" disabled>
    </div>
    <div class="mb-3">
        <label asp-for="Firstname" class="form-label"></label>
        <input asp-for="Firstname" class="form-control" disabled>
    </div>
    <div class="mb-3">
        <label asp-for="Mail" class="form-label"></label>
        <input asp-for="Mail" class="form-control" disabled>
    </div>
    <div class="mb-3">
        <label asp-for="PhoneNumber" class="form-label"></label>
        <input asp-for="PhoneNumber" class="form-control" disabled>
    </div>
    <div class="mb-3">
        <label asp-for="Budget" class="form-label"></label>
        <input asp-for="Budget" class="form-control" disabled>
    </div>
    <div class="text-center">
        <button type="submit" value="Submit" class="btn btn-danger">Supprimer</button>
    </div>
</form> 